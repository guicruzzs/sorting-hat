<div class="row">
  <div class="col s6 offset-s3">
    <h4 class="center-align">Welcome :)</h4>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <% if alert %>
        <p id="error_explanation"><%= alert %></p>
      <% end %>

      <div class="input-field field">
        <i class="material-icons prefix">account_circle</i>
        <%= f.email_field :email, autofocus: true, id: 'icon_email' %>
        <%= f.label :email, for: 'icon_email' %>
      </div>

      <div class="input-field field">
        <i class="material-icons prefix">security</i>
        <%= f.label :password, for: 'icon_pass' %>
        <%= f.password_field :password, autocomplete: "off", id: 'icon_pass' %>
      </div>

      <div>
        <div class="col s6">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
        </div>
        <div class="col s6 right-align">
          <button class="btn waves-effect waves-light" type="submit" name="action">Login
            <i class="material-icons right">send</i>
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <%= render "devise/shared/links" %>
</div>